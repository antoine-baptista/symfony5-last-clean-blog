{% extends 'sbadmin.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}

                <main>
                    <div class="container-fluid px-4">

                        <h1>Liste des catégories</h1>

                        {{ dump(categories) }}

                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-table me-1"></i>
                                DataTable Example
                            </div>
                            <div class="card-body">
                                <table id="datatablesSimple">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Nom catégorie</th>
                                            <th>Catégorie Parent</th>
                                            <th>Slug</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Id</th>
                                            <th>Nom catégorie</th>
                                            <th>Catégorie Parent</th>
                                            <th>Slug</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        
                                        {% for category in categories %}
                                        <tr>
                                            <td>{{ category.id }}</td>
                                            <td>{{ category.name }}</td>
                                            <td>{{ category.parent }}</td>
                                            <td>{{ category.slug }}</td>
                                        </tr>                                            
                                        {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                        </div>


                    </div>
                </main>
                                        
{% endblock %}